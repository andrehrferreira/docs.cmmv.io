{
	"name": "cmmv-docs",
	"version": "0.4.0",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "NODE_ENV=dev nodemon",
		"test": "mocha packages/**/*.spec.ts",
		"start": "NODE_ENV=prod node dist/index.js",
		"generate": "node -r @swc-node/register ./src/generate.ts",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andrehrferreira/docs.cmmv.io.git"
	},
	"keywords": [
		"cmmv",
		"docs",
		"documentation"
	],
	"author": "Andre Ferreira",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/andrehrferreira/docs.cmmv.io/issues"
	},
	"homepage": "https://github.com/andrehrferreira/docs.cmmv.io#readme",
	"description": "",
	"lint-staged": {
		"**/*.ts": [
			"prettier --ignore-path ./.prettierignore --write"
		],
		"packages/**/*.json": [
			"prettier --ignore-path ./.prettierignore --write"
		]
	},
	"dependencies": {
		"@cmmv/core": "^0.5.10",
		"@cmmv/http": "^0.5.10",
		"@cmmv/view": "^0.5.10",
		"dotenv": "^16.4.5",
		"fast-glob": "^3.3.2",
		"glob": "^11.0.0",
		"highlight.js": "^11.10.0",
		"highlightjs-copy": "^1.0.6",
		"markdown-it": "^14.1.0",
		"vue": "^3.5.13"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-angular": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@swc-node/core": "^1.13.3",
		"@swc-node/register": "^1.10.9",
		"@swc/core": "^1.9.2",
		"@types/chai": "^4.3.20",
		"@types/jest": "^29.5.14",
		"@types/mocha": "^10.0.9",
		"@types/node": "^22.9.0",
		"chai": "^5.1.2",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"mocha": "^10.8.2",
		"nodemon": "^3.1.7",
		"prettier": "^3.3.3",
		"typescript": "^5.6.3"
	}
}
