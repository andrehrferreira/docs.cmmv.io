{
    "watch": ["src", "public", "docs"],
    "ext": "ts,js,md,html",
    "ignore": [
        "src/**/*.spec.ts", "src/app.module.ts", 
        "public/core/*", "public/assets/**/*", 
        "public/assets/*", "docs/**/*.html",
        "docs/*.html"
    ],
    "exec": "npm run generate && node -r @swc-node/register ./src/index.ts" 
}